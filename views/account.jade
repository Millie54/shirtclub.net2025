                                        input#Zip.form-control(type='text', placeholder='N2L 3E6', value='#{user.zip}')

                        .form-group.marbottom(style='height: 82px')
                            label.control-label Phone Number
                            br
                            .form-group.col-sm-6.pw-col-1
                                input#Phone.form-control(type='text', placeholder='416-423-1234', value='#{user.phone}')
                            .form-group.col-sm-6.pw-col-2
                                label.radio-inline
                                    input(type='radio', name='phone_number_type', value='home')
                                    | Home
                                label.radio-inline
                                    input(type='radio', name='phone_number_type', value='business')
                                    | Business
                                label.radio-inline
                                    input(type='radio', name='phone_number_type', value='cell')
                                    | Cell

                        .form-group.marbottom(style="height: 110px;")
                            div Password
                            br
                            .form-group.col-sm-6.pw-col-1.marbotzero
                                input#Password.form-control(type='password', data-minlength='6', placeholder='Password', value='#{user.password}')
                                span.help-block Minimum of 6 characters

                        .form-group.marbottom
                            div Confirm Password
                            br
                            .form-group.col-sm-6.pw-col-2
                                input#PasswordConfirm.form-control(type='password', data-match='#inputPassword', data-match-error="Whoops, these don't match" placeholder="Confirm", value='#{user.password}')
                                .help-block.with-errors

                        .form-group(style='float:left; width: 100%')
                            button#form.btn.btn-primary(type='submit') Update

                        .form-group#registrationStatus




block js
    script(src='/js/Authenticated.js')
