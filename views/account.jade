extends template

block css
    link(rel='stylesheet', href='/css/Authenticated.css')
    link(rel='stylesheet', href='/css/account.css')


block content
    .main-container
        .main.wrapper.clearfix
            article
                header
                    h3 Hi #{user.first_name}!
                    h4 Member ID: #{user.member_id}
                    p
                    h4#membership-status

                div#managed-message-section

                h3 Update Your Profile:
                section
                    form#form(data-toggle='validator', role='form')
                        .form-group
                            .col-sm-6(style="padding:0; padding-right: 15px;")
                                label.control-label Email
                                input#Email.form-control(type='email', placeholder='Jason@theleague.ca', value='#{user.email}')
                                .help-block.with-errors

                            .col-sm-6(style="padding:0")
                                label.control-label Confirm Email
                                input#ConfirmEmail.form-control(type='email', placeholder='Jason@theleague.ca', value='#{user.email}')
                                .help-block.with-errors


                        .form-group

                            label.control-label Street Name
                            input#Street.form-control(type='text', placeholder='1926 Johnson Rd', value='#{user.street}')
                            br

                            .row
                                .col-lg-3
                                    .input-group
                                        label.control-label Zone
                                        .dropdown
                                            button.btn.btn-default.dropdown-toggle#selectZone(type='button' data-toggle='dropdown' aria-expanded='true') Select
                                                span.caret
                                            ul.dropdown-menu#zone
