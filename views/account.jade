                                        label.control-label Country
                                        input#Country.form-control(type='text', value='#{user.country}')

                                .col-lg-3
                                    .input-group

                                        label.control-label City
                                        input#City.form-control(type='text', placeholder='Toronto', value='#{user.city}')




                                .col-lg-3
                                    .input-group
