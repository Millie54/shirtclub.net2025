                        hr

                        div(id='blood-type-dropdown')
                            h4 Blood Type&nbsp
                                i(class='fa fa-info-circle fa-sm' data-toggle='tooltip' data-placement='right' title='IMPORTANT: If you do not know your blood type DO NOT GUESS!')
                                span &nbsp:
                                p
                                .dropdown
                                    button.btn.btn-default.dropdown-toggle#selectBloodType(type='button' data-toggle='dropdown' aria-expanded='true') Select
                                        span.caret
                                    ul.dropdown-menu#blood-type(role='menu')
                                        <li role="presentation"><a value="A+" >A+ </a></li>
                                        <li role="presentation"><a value="A-" >A- </a></li>
                                        <li role="presentation"><a value="B+" >B+ </a></li>
                                        <li role="presentation"><a value="B-" >B- </a></li>
                                        <li role="presentation"><a value="O+" >O+ </a></li>
                                        <li role="presentation"><a value="O-" >O- </a></li>
                                        <li role="presentation"><a value="AB+" >AB+ </a></li>
                                        <li role="presentation"><a value="AB-" >AB- </a></li>
                        label.radio-inline
                            input(type='radio', name='show_blood_type', required='', value='1')
                            | Show Public
                        label.radio-inline
                            input(type='radio', name='show_blood_type', required='', value='0')
                            | Private

